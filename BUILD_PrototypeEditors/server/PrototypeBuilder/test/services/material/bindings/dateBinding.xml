<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="generated.app.view.SimplePage" xmlns:m="sap.m">
    <m:Page id="RootControl" title="Simple Page">
        <m:content>
            <m:Text id="Date" text="{path: 'StartDate', type: 'sap.ui.model.type.DateTime', formatOptions: { UTC: true, style: 'short' }}"/>
            <m:Text id="Time" text="{path: 'EndTime', type: 'sap.ui.model.type.DateTime', formatOptions: { UTC: true, pattern: 'HH:mm' }}"/>
        </m:content>
    </m:Page>
</mvc:View>
